<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Express Blog</title>
</head>
<body>
  
  <header>
    <h1>Express Blog</h1>
    <nav>
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/authors">Author Index</a>
        </li>
        <li>
          <a href="/authors/new">Add New Author</a>
        </li>
        <li>
          <a href="/articles">Articles Index</a>
        </li>
        <li>
          <a href="/articles/new">Add New Articles</a>
        </li>
      </ul>
    </nav>
  </header>
  
  <main>
    <h2>Show Page for <%= author.name %></h2>
    <section>
      <h2>Author Attributes:</h2>
      <ul>
        <li>Name: <%= author.name %></li>
      </ul>

      <ul>
        <% author.articles.forEach((article) => { %>
          <a href="/articles/<%= article.id %>"><li><%= article.title %></li></a>
        <% }) %>
      </ul>

    </section>
    <section>
      <a href="/authors/<%= author._id %>/edit">
        <button>Edit</button>
      </a>

      <form action="/authors/<%= author._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete Author"/>
      </form>
    </section>
  </main>

</body>
</html>
